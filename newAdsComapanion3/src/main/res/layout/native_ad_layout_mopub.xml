<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/example_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_below="@id/native_ad_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/native_ad_main_image" />
    <ImageView
        android:layout_below="@id/lay_info"
        android:src="@drawable/ic_ads"
        android:layout_margin="2dp"
        android:layout_alignParentStart="true"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:id="@+id/native_ad_icon_image" />
    <TextView
        android:layout_below="@id/lay_info"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Native Ad Title"
        android:textStyle="bold"
        android:padding="2dp"
        android:layout_toEndOf="@id/native_ad_icon_image"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/native_ad_title" />
    <TextView
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:padding="2dp"
        android:layout_below="@id/native_ad_title"
        android:layout_toEndOf="@id/native_ad_icon_image"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/native_ad_text" />

    <LinearLayout
        android:id="@+id/lay_info"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/native_ad_privacy_information_icon_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="5dp" />


        <ImageView
            android:src="@drawable/ic_ads"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/iv_ad"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="5dp" />

        <TextView
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="18sp"
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"
            android:gravity="center|start|center_vertical"
            android:layout_centerVertical="true"
            android:text="Sponsored"
            android:layout_toEndOf="@id/native_ad_privacy_information_icon_image"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/native_sponsored_text_view" />



    </LinearLayout>

</RelativeLayout>